/* example/chat/chat.wxss */
@import '/style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    font-size: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.page-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: '微软雅黑'
}

.msg-list {
    padding-bottom: 60px;
    height: 600px;
}

.friend {
    display: flex;
    padding: 10px;
    width: 94%;
}

.myself {
    display: flex;
    width: 94%;
    flex-direction: row-reverse;
}

.item-msg {
    padding: 10px;
    background: #fff;
    max-width: 70%;
    border: .2px solid #e2e2e2;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item-msg-self{
    padding: 10px;
    background-color:  #83F256;
    max-width: 70%;
    border: .2px solid #e2e2e2;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    width: 40px;
    height: 40px;
    display: inline-block;
    background: #fff;
    border-radius: 50%;
    border: 1px solid #e2e2e2;
}

.triangle {
    position: relative;
    width: 10px;
}

.b-triangle,
.t-triangle {
    width: 0;
    height: 0;
    font-size: 0;
    overflow: hidden;
    position: absolute;
    display: inline;
    border-style: solid;
}

.f-b-triangle {
    border-width: 8px;
    left: -5px;
    top: 10px;
    border-color: transparent #e2e2e2 transparent transparent;
}

.f-t-triangle {
    border-width: 7px;
    left: -3px;
    top: 11px;
    border-color: transparent #fff transparent transparent;
}

.s-b-triangle {
    border-width: 8px;
    left: 0px;
    top: 10px;
    border-color: transparent transparent transparent #e2e2e2;
}

.s-t-triangle {
    border-width: 7px;
    left: -1px;
    top: 11px;
    border-color: transparent transparent transparent #83F256;
}

.msg-input {
    width: 100%;
    padding: 5px;
    position: fixed;
    bottom: 0;
    background-color: #f8f8f8;
}

.send-input {
    border: 1px solid #e2e2e2;
    height: 33px;
    float: left;
    width: 70%;
    margin-right: 5px;
    border-radius: 5px;
    background: #fff;
    padding: 0 10px;
}

.send-btn {
    width: 20%;
    height: 34px;
    font-size: 16px;
    line-height: 2;
    margin: 0;
    float: right;
    margin-right: 10px;
    background: #666;
    color: #fff;
}

.dialog-box {
    position: relative;
}

span {
    width: 0;
    height: 0;
    font-size: 0;
    overflow: hidden;
    position: absolute;
}

.bot {
    border-width: 15px;
    border-style: solid dashed dashed;
    border-color: transparent transparent #F9743A transparent;
    left: 15px;
    top: -29px;
}

.top {
    border-width: 13px;
    border-style: solid dashed dashed;
    border-color: transparent transparent #fff transparent;
    left: 17px;
    top: -25px;
}

.search-hi-item {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #ededed;
}




.hi-text {
  position: absolute;
  left: 40rpx;
  right: 108rpx;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 32rpx;
}